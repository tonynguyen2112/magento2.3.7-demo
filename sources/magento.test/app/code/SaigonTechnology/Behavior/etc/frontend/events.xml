<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="catalog_controller_product_view">
        <observer name="BehaviorProductView" instance="SaigonTechnology\Behavior\Observer\Product\View" />
    </event>

    <event name="checkout_cart_add_product_complete">
        <observer name="BehaviorProductAddToCart" instance="SaigonTechnology\Behavior\Observer\Product\AddToCart" />
    </event>

    <event name="checkout_onepage_controller_success_action">
        <observer name="BehaviorProductCheckoutComplete" instance="SaigonTechnology\Behavior\Observer\Product\CheckoutComplete" />
    </event>
</config>
